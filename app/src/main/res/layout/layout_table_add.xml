<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/bg_whitecorner"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm bàn"
        android:background="@drawable/bg_yellowcorner_top"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:padding="16dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edtTableIndex"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="18sp"
        android:hint="Nhập số bàn"
        android:textColor="@color/black"
        android:inputType="numberSigned|numberDecimal"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_graycorner"
            android:textSize="16sp"
            android:alpha="0.5"
            android:layout_margin="10dp"
            android:text="Hủy bỏ" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:background="@drawable/bg_yellowcorner_button"
            android:layout_margin="10dp"
            android:text="Thêm" />
    </LinearLayout>

</LinearLayout>