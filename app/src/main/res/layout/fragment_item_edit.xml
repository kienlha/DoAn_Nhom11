<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Fragment_item_edit">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/btnBack2"
        android:src="@drawable/ic_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="12dp"
        android:text="Hình ảnh:"
        android:textSize="18sp"
        android:textColor="@color/dennhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgEditDink"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/round_edt"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/taianh"
            app:riv_corner_radius="12dp">

        </com.makeramen.roundedimageview.RoundedImageView>
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_margin="12dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/imgEditDink"
            android:layout_alignLeft="@id/imgEditDink"
            android:background="@drawable/circle_img_white"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera_alt"
            app:riv_oval="true">
        </com.makeramen.roundedimageview.RoundedImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_coffee_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:text="Tên sản phẩm:"
            android:textSize="18sp"
            android:textColor="@color/dennhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edtNameDrink"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:background="@drawable/round_edt"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="4dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_attach_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:text="Giá:"
            android:textSize="18sp"
            android:textColor="@color/dennhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edtPrice"
        android:textSize="18sp"
        android:background="@drawable/round_edt"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSaveDrink"
        android:text="Lưu"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:background="@drawable/round_bg_btn"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>